div(ng-controller='GentlemenController' layout='column' ng-cloak)
    include ./menu.pug
    md-content(flex)
        md-toolbar.md-accent(md-colors='{backgroundColor: "blue"}')
            div.md-toolbar-tools(layout='row' layout-align='space-between center')
                md-button(aria-label='{{name}}' ng-click='leftMenu()').md-icon-button
                    i.fa.fa-bars
                span {{title}}
                md-button(aria-label='Next').md-icon-button
                    i.fa.fa-arrow-right
        .container
            md-content(layout-padding)
                .image
                    img(src='img/man.jpg' alt='')
                .name_and_likes(layout='row')
                    md-button(md-colors='{color: "red"}' flex)
                        i.fa.fa-thumbs-down
                    .name(layout='column')
                        .full_name(md-colors='{color: "blue"}') Nurasyl Aldan
                        .username @nurasyl
                    md-button(md-colors='{color: "green"}' flex)
                        i.fa.fa-thumbs-up
                // md-divider
                form(onsummit='return false' autocomplete='off')
                .comment(layout='row')
                    md-input-container.md-block.no-error
                        input(type='text' placeholder='Enter your comment here' md-detect-hidden='false' ng-model='form.comment' maxlength='100')
                    md-button(flex).md-primary.md-raised
                        i.fa.fa-paper-plane
